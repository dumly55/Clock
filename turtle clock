import turtle
import datetime

window = turtle.Screen()

# turtle description named marker for the hour markers
marker = turtle.Turtle()
marker.up()
marker.shape("square")

# turtle description named hands
hands = turtle.Turtle()
hands.down()

# create the clock
for hours in range(12):
    marker.forward(150)
    marker.stamp()
    marker.backward(150)
    marker.left(360/12)
    